<%= form_with model: @test, local: true do |form| %>
  <%= render 'shared/errors', resource: test %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %> 
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.number_field :level, id: :test_level %> 
  </p>

  <p>
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %> 
  </p>

  <p>
    <%= form.label :author_id %><br>
    <%= form.collection_select :author_id, User.all, :id, :login, prompt: true %><br> 
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', tests_path %>