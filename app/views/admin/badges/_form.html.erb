<div class="row justify-content-center mt-3">
  <div class="col col-md-5">
    <%= render 'shared/errors', resource: @badge %>

    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <div class="form-group">

        <p>
          <%= form.label :image %>
          <%= form.text_field :image, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :rule_number %>
          <%= form.select :rule_number, options_for_select([
                                                      ['После прохождения всех тестов категории', 1],
                                                      ['После прохождения теста с первой попытки', 2],
                                                      ['После прохождения теста определенного уровня', 3]
                                                    ], selected: @badge.rule_number), { prompt: true }, { class: 'form-control' }  %>
        </p>

        <p>
          <%= form.label :rule_body %>
          <%= form.text_field :rule_body, class: 'form-control' %>
        </p>

        <p><%= form.submit class: 'btn btn-primary' %></p>
      </div>
    <% end %>
    <%= link_to t('back'), admin_tests_path %>
  </div>
</div>